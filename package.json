{
  "name": "kinex",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently -n server,client -c blue,green \"npm:dev --workspace=server\" \"npm:dev --workspace=client\"",
    "build": "npm run build -w server && npm run build -w client",
    "start": "npm run start -w server",
    "install:all": "npm install --workspaces"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
